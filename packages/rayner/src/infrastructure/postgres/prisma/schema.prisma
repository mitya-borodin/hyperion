generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./hyperion.db"
}

model Settings {
  name  String @unique
  value String

  @@map("_settings")
}

model HyperionDevice {
  deviceId String @id
  driver   String @default("UNSPECIFIED")
  title    String @default("{}")
  error    String @default("{}")
  meta     String @default("{}")

  controls HyperionDeviceControl[]
}

model HyperionDeviceControl {
  device   HyperionDevice @relation(fields: [deviceId], references: [deviceId], onDelete: Cascade)
  deviceId String

  controlId String
  title     String  @default("{}")
  order     Int     @default(0)
  readonly  Boolean @default(true)
  type      String  @default("UNSPECIFIED")
  units     String  @default("UNSPECIFIED")
  max       Float   @default(0)
  min       Float   @default(0)
  precision Float   @default(0)
  value     String  @default("0")
  topic     String  @default("UNSPECIFIED")
  error     String  @default("UNSPECIFIED")
  meta      String  @default("{}")

  @@unique([deviceId, controlId])
}
