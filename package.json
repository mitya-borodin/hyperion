{
  "name": "hyperion",
  "license": "AGPL-3.0-only",
  "private": true,
  "scripts": {
    "start": "nodemon --config nodemon.json cmd/hyperion.ts | pino-pretty -c",
    "test": "jest --config jest.config.js --no-cache --runInBand",
    "build:check": "tsc --project ./tsconfig.json",
    "build": "del-cli build && tsc --project ./tsconfig.build.json && yarn build:schema && copyfiles --up 1 -V './src/**/*.graphql' build/ && copyfiles --up 1 -V './src/**/*.json' build/",
    "build:schema": "DEBUG=generate-json-schema ts-node ./scripts/generate-json-schema.ts && yarn prettier:write",
    "prisma:generate": "prisma generate --schema ./src/infrastructure/postgres/prisma/schema.prisma",
    "prisma:migrate:dev": "prisma migrate dev --schema ./src/infrastructure/postgres/prisma/schema.prisma --skip-seed",
    "prisma:migrate:rollback": "prisma migrate resolve --schema ./src/infrastructure/postgres/prisma/schema.prisma --rolled-back",
    "prisma:migrate:deploy": "prisma migrate deploy --schema ./src/infrastructure/postgres/prisma/schema.prisma",
    "prisma:migrate:status": "prisma migrate status --schema ./src/infrastructure/postgres/prisma/schema.prisma",
    "prisma:seed": "prisma db seed",
    "prisma:reset": "prisma migrate reset --schema ./src/infrastructure/postgres/prisma/schema.prisma",
    "prettier:base": "prettier \"**/*.{ts,json,md}\"",
    "prettier:check": "yarn prettier:base --check",
    "prettier:write": "yarn prettier:base --write",
    "eslint:check": "eslint --ext .js,.jsx,.ts,.tsx src",
    "eslint:write": "eslint --fix --ext .js,.jsx,.ts,.tsx src",
    "ncu:outdated": "npm-check-updates",
    "ncu:upgrade": "npm-check-updates -u --target minor"
  },
  "dependencies": {
    "@fastify/cookie": "^9.3.1",
    "@fastify/helmet": "^11.1.1",
    "@fastify/jwt": "^8.0.0",
    "@fastify/static": "^6.12.0",
    "@prisma/client": "^5.15.0",
    "abort-controller-x": "^0.4.3",
    "base-x": "^4.0.0",
    "copyfiles": "^2.4.1",
    "date-fns": "2.0.1",
    "date-fns-tz": "2.0.0",
    "debug": "^4.3.4",
    "defer-promise": "^3.0.0",
    "dotenv": "^16.3.1",
    "fastify": "^4.25.2",
    "fastify-metrics": "^10.6.0",
    "fastify-plugin": "^4.5.1",
    "fastify-raw-body": "^4.3.0",
    "graphql": "^16.8.1",
    "graphql-upload-minimal": "^1.5.5",
    "http-status-codes": "^2.3.0",
    "lodash.clonedeep": "^4.5.0",
    "lodash.debounce": "^4.0.8",
    "lodash.defaultsdeep": "^4.6.1",
    "lodash.isequal": "^4.5.0",
    "lodash.merge": "^4.6.2",
    "lodash.omit": "^4.5.0",
    "lodash.throttle": "^4.1.1",
    "lodash.uniq": "^4.5.0",
    "mercurius": "^13.3.3",
    "mercurius-auth": "^5.0.0",
    "mercurius-codegen": "^5.0.3",
    "mercurius-upload": "^7.0.0",
    "mqtt": "^5.3.4",
    "node-fetch": "^2.7.0",
    "pino": "^8.17.2",
    "prettier": "^2.8.8",
    "qrcode": "^1.5.3",
    "qs": "^6.11.2",
    "speakeasy": "^2.0.0",
    "suncalc": "^1.9.0",
    "ts-json-schema-generator": "^1.5.0",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@tsconfig/node20": "^20.1.2",
    "@types/debug": "^4.1.12",
    "@types/defer-promise": "^1.0.4",
    "@types/jest": "^29.5.11",
    "@types/lodash.clonedeep": "^4.5.9",
    "@types/lodash.debounce": "^4.0.9",
    "@types/lodash.defaultsdeep": "^4.6.9",
    "@types/lodash.isequal": "^4.5.8",
    "@types/lodash.merge": "^4.6.9",
    "@types/lodash.omit": "^4.5.9",
    "@types/lodash.throttle": "^4.1.9",
    "@types/lodash.uniq": "^4.5.9",
    "@types/mocha": "^10.0.6",
    "@types/node": "^20.11.5",
    "@types/node-fetch": "^2.6.6",
    "@types/qrcode": "^1.5.5",
    "@types/qs": "^6.9.11",
    "@types/speakeasy": "^2.0.10",
    "@types/suncalc": "^1.9.2",
    "@types/uuid": "^9.0.7",
    "@types/ws": "^8.5.10",
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "@typescript-eslint/parser": "^6.19.0",
    "del-cli": "^5.1.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-import-resolver-typescript": "^3.6.1",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-jest": "^27.6.3",
    "eslint-plugin-unicorn": "^50.0.1",
    "eslint-plugin-unused-imports": "^3.0.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.3",
    "npm-check-updates": "^16.14.12",
    "pino-pretty": "^10.3.1",
    "prisma": "^5.15.0",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "tsc-watch": "^6.0.4",
    "tslib": "^2.6.2",
    "typescript": "^5.3.3"
  },
  "prisma": {
    "seed": "ts-node ./src/infrastructure/postgres/seed/index.ts"
  }
}
