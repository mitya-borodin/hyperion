{
  "name": "hyperion",
  "private": true,
  "scripts": {
    "start": "nodemon --config nodemon.json cmd/hyperion.ts | pino-pretty -c",
    "test": "jest --config jest.config.js --no-cache --runInBand",
    "build:check": "tsc --project ./tsconfig.json",
    "build": "del-cli build && tsc --project ./tsconfig.build.json",
    "prisma:generate": "prisma generate --schema ./src/infrastructure/postgres/prisma/schema.prisma",
    "prisma:migrate:dev": "prisma migrate dev --schema ./src/infrastructure/postgres/prisma/schema.prisma --skip-seed",
    "prisma:migrate:rollback": "prisma migrate resolve --schema ./src/infrastructure/postgres/prisma/schema.prisma --rolled-back",
    "prisma:migrate:deploy": "prisma migrate deploy --schema ./src/infrastructure/postgres/prisma/schema.prisma",
    "prisma:migrate:status": "prisma migrate status --schema ./src/infrastructure/postgres/prisma/schema.prisma",
    "prisma:seed": "prisma db seed",
    "prisma:reset": "prisma migrate reset --schema ./src/infrastructure/postgres/prisma/schema.prisma",
    "prettier:base": "prettier \"**/*.{ts,json,md}\"",
    "prettier:check": "yarn prettier:base --check",
    "prettier:write": "yarn prettier:base --write",
    "eslint:check": "eslint --ext .js,.jsx,.ts,.tsx src",
    "eslint:fix": "eslint --fix --ext .js,.jsx,.ts,.tsx src",
    "ncu:outdated": "npm-check-updates",
    "ncu:upgrade": "npm-check-updates -u --target minor"
  },
  "dependencies": {
    "@fastify/cookie": "^8.3.0",
    "@fastify/helmet": "^8.0.0",
    "@fastify/jwt": "^6.7.1",
    "@fastify/static": "^6.11.0",
    "@prisma/client": "^5.2.0",
    "abort-controller-x": "^0.4.3",
    "base-x": "^4.0.0",
    "date-fns": "^2.30.0",
    "defer-promise": "^3.0.0",
    "dotenv": "^14.3.2",
    "fastify": "^4.22.2",
    "fastify-metrics": "^10.3.0",
    "fastify-plugin": "^4.5.1",
    "fastify-raw-body": "^4.2.2",
    "graphql": "^16.8.1",
    "graphql-upload": "^13.0.0",
    "http-status-codes": "^2.2.0",
    "lodash.clonedeep": "^4.5.0",
    "lodash.isequal": "^4.5.0",
    "lodash.omit": "^4.5.0",
    "lodash.uniq": "^4.5.0",
    "mercurius": "^11.5.0",
    "mercurius-auth": "^3.0.0",
    "mercurius-codegen": "^5.0.3",
    "mercurius-upload": "^5.0.0",
    "mqtt": "^5.0.4",
    "node-fetch": "2",
    "pino": "^7.11.0",
    "prettier": "^2.8.8",
    "qrcode": "^1.5.3",
    "qs": "^6.11.2",
    "speakeasy": "^2.0.0",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "@tsconfig/node18": "^1.0.3",
    "@types/defer-promise": "^1.0.2",
    "@types/jest": "^27.5.2",
    "@types/lodash.clonedeep": "^4.5.7",
    "@types/lodash.isequal": "^4.5.6",
    "@types/lodash.omit": "^4.5.7",
    "@types/lodash.uniq": "^4.5.7",
    "@types/mocha": "^9.1.1",
    "@types/node": "^16.18.48",
    "@types/node-fetch": "^2.6.6",
    "@types/qrcode": "^1.5.2",
    "@types/qs": "^6.9.8",
    "@types/speakeasy": "^2.0.8",
    "@types/uuid": "^8.3.4",
    "@types/ws": "^8.5.5",
    "@typescript-eslint/eslint-plugin": "^6.7.4",
    "@typescript-eslint/parser": "^6.7.4",
    "del-cli": "^4.0.1",
    "eslint": "^8.50.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-import-resolver-typescript": "^3.6.1",
    "eslint-plugin-import": "^2.28.1",
    "eslint-plugin-jest": "^27.4.2",
    "eslint-plugin-unicorn": "^48.0.1",
    "eslint-plugin-unused-imports": "^3.0.0",
    "jest": "^29.6.4",
    "nodemon": "^2.0.22",
    "npm-check-updates": "^16.13.2",
    "pino-pretty": "^7.6.1",
    "prisma": "^5.2.0",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "tsc-watch": "^4.6.2",
    "tslib": "^2.6.2",
    "typescript": "^4.9.5"
  },
  "prisma": {
    "seed": "ts-node ./src/infrastructure/postgres/seed/index.ts"
  }
}
