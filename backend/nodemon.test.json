{
  "restartable": "rs",
  "ignore": [".git", "node_modules/", "dist/", "coverage/"],
  "watch": ["src/"],
  "execMap": {
    "ts": "node --inspect=0.0.0.0:9229 --trace-warnings -r ts-node/register"
  },
  "env": {
    "NODE_ENV": "development",
    "PURGE_TEST_DATABASE": true
  },
  "ext": "js,json,ts"
}
